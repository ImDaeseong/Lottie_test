<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main7Activity">

    <ScrollView
        android:orientation="vertical"
        android:id="@+id/hsv1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/lottie_view1"
                layout="@layout/lottie_view"
                android:visibility="visible"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <include
                android:id="@+id/lottie_view2"
                layout="@layout/lottie_view"
                android:visibility="visible"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/lottie_view1"
                app:layout_constraintLeft_toLeftOf="parent" />

            <include
                android:id="@+id/lottie_view3"
                layout="@layout/lottie_view"
                android:visibility="visible"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/lottie_view2"
                app:layout_constraintLeft_toLeftOf="parent" />

            <include
                android:id="@+id/lottie_view4"
                layout="@layout/lottie_view"
                android:visibility="visible"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/lottie_view3"
                app:layout_constraintLeft_toLeftOf="parent" />

            <include
                android:id="@+id/lottie_view5"
                layout="@layout/lottie_view"
                android:visibility="visible"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/lottie_view4"
                app:layout_constraintLeft_toLeftOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>